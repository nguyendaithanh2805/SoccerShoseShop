@model SoccerShoesShop.Areas.Admin.Models.Category
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<form asp-action="@(Model.CategoryId == 0 ? "Create" : "Edit")" method="POST">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="CategoryId">ID</label>
        <input asp-for="CategoryId" class="form-control" readonly />
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>