@model IEnumerable<SoccerShoesShop.Models.TblOrder>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .image{
        max-width: 30px;
        max-height: 30px;
    }
    .table{
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <h5>Approved Orders</h5>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Payment method</th>
                    <th scope="col">User</th>
                    <th scope="col">Order Date</th>
                    <th scope="col">Delivery Date</th>
                    <th scope="col">Address</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    @if (order.Status == true)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.PaymentMethod</td>
                            <td>@order.User.Username</td>
                            <td>@order.OrderDate</td>
                            <td>@order.DeliveryDate</td>
                            <td>@order.Address</td>
                            <td>
                                <form asp-action="EditStatus" method="post">
                                    <input type="hidden" name="id" value="@order.OrderId" />
                                    @if (!order.Status)
                                    {
                                        <button class="btn btn-primary" type="submit" name="status" value="true">Approve</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-danger" type="submit" name="status" value="false">Disapprove</button>
                                    }
                                </form>
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Order" asp-action="Delete" asp-route-id="@order.OrderId">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot>
            </tfoot>
        </table>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12">
        <h5>Unapproved Orders</h5>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Payment method</th>
                    <th scope="col">User</th>
                    <th scope="col">Order Date</th>
                    <th scope="col">Delivery Date</th>
                    <th scope="col">Address</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    @if (order.Status == false)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.PaymentMethod</td>
                            <td>@order.User.Username</td>
                            <td>@order.OrderDate</td>
                            <td>@order.DeliveryDate</td>
                            <td>@order.Address</td>
                            <td>
                                <form asp-action="EditStatus" method="post">
                                    <input type="hidden" name="id" value="@order.OrderId" />
                                    @if (!order.Status)
                                    {
                                        <button class="btn btn-primary" type="submit" name="status" value="true">Approve</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-danger" type="submit" name="status" value="false">Disapprove</button>
                                    }
                                </form>
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Order" asp-action="Delete" asp-route-id="@order.OrderId">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot>
            </tfoot>
        </table>
    </div>
</div>
